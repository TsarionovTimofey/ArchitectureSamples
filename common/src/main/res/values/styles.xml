<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PickerStyle">
        <item name="colorControlNormal">#4C5160</item>
        <item name="android:textColor">#4C5160</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>

        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">#D2D5DB</item>
    </style>

    <style name="MyBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/MYBottomSheetStyle</item>
    </style>

    <style name="MYBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="NoWiredStrapInNavigationBar" parent="@style/Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.0</item>
        <item name="android:windowFrame">@null</item>

        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="bottomSheetStyle">@style/MYBottomSheetStyle</item>
    </style>




</resources>